// configurações de @DJEDU28 https://github.com/djedu28/
// Coloque as suas associações de teclas neste arquivo para substituir os padrões
[
    {
        "key": "ctrl+k ctrl+c",
        "command": "-editor.action.addCommentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+oem_102",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+oem_2",
        "command": "-editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+q",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus"
    },
    {
        "key": "win+k win+c",
        "command": "-editor.action.commentLine",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k ctrl+shift+u",
        "command": "editor.action.transformToUppercase"
    },
    {
        "key": "ctrl+k ctrl+shift+l",
        "command": "editor.action.transformToLowercase"
    },
    {
        "key": "ctrl+k ctrl+shift+t",
        "command": "editor.action.transformToTitlecase"
    },
    {
        "key": "ctrl+shift+oem_102",
        "command": "filesExplorer.findInWorkspace"
    },
    {
        "key": "ctrl+shift+oem_102",
        "command": "workbench.files.action.showActiveFileInExplorer"
    },
    {
        "key": "ctrl+shift+oem_5",
        "command": "-workbench.files.action.showActiveFileInExplorer"
    },
    {
        "key": "ctrl+shift+d",// herdada do atom
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus"
    }
]